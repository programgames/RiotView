<Window x:Class="RiotView.app.ModifiezUtilisateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RiotView.app"
        mc:Ignorable="d"
        Title="ModifiezUtilisateur" Height="300" Width="300">
    <Grid Background="DarkGray">
        <Grid.RowDefinitions>
            <RowDefinition />

            <RowDefinition />
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />



        </Grid.RowDefinitions>
        <Label Grid.Row="0">Nom :</Label>
        <TextBox Text="{Binding Nom}" Grid.Row="1" Background="LightGray"/>
        <Label Grid.Row="2"> Mot de Passe</Label>
        <TextBox Text="{Binding MotDePasse}" Background="LightGray" Grid.Row="3"/>
        <Button Content="Sauvegarder"  Command="{Binding CommandeSauver}" Grid.Row="5" Background="LightGray"/>
    </Grid>
</Window>
